<% 
  def field_class
    "mdl-textfield mdl-js-textfield mdl-textfield--floating-label"
  end
%>
<section id="users">
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="<%= field_class %>">
    <%= f.label :phone, :class => 'mdl-textfield__label' %>
    <%= f.text_field :phone, :class => 'mdl-textfield__input' %>
  </div>
  <div class="<%= field_class %>">
    <%= f.label :First_name, :class => 'mdl-textfield__label' %>
    <%= f.text_field :fname, :class => 'mdl-textfield__input' %>
  </div>
  <div class="<%= field_class %>">
    <%= f.label :Last_name, :class => 'mdl-textfield__label' %>
    <%= f.text_field :lname_initial, :class => 'mdl-textfield__input' %>
  <br/>
  </div>
  <div class="<%= field_class %>">
    <%= f.label :email, :class => 'mdl-textfield__label' %>
    <%= f.text_field :email,:class => 'mdl-textfield__input' %>
  <br/>
  </div>
  <div class="<%= field_class %>">
    <%= f.label :password,:class => 'mdl-textfield__label' %>
    <%= f.text_field :password, :class => 'mdl-textfield__input'  %>
 </div>

 <!--
  Use vvvv  for upload button
  http://codepen.io/akhmed_gaziev/pen/JdVQQm 
-->
  <div class="<%= field_class %>">
    <%= f.label :bio,:class => 'mdl-textfield__label' %>
    <%= f.text_area :bio,:class => 'mdl-textfield__input'  %>
 </div>
  <div class="mdl-textfield mdl-js-textfield textfield-demo">
    <%= f.file_field :prof_img_url, :class => 'file_input_text mdl-textfield__input' %>
    <label class="mdl-textfield__label" for="file_input_text"></label>
  </div>
  <div class="<%= field_class %>">
    <%= f.submit :class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect' %>
  </div>
<% end %>
</section>