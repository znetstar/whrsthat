<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<%= link_to "New Event_photo", new_event_photo_path, class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Download Link</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @event_photos.each do |pic| %>
      <tr>
        <td><%= pic.name %></td>
        <td><%= button_to "Delete",  pic, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{pic.name}?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>