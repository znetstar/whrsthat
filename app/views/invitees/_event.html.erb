<div class="demo-card-event mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title mdl-card--expand" style="background: linear-gradient(rgba(110, 99, 103, 0.45), rgba(255, 0, 0, 0.45)), url('<%= event.image_url %>');">
    <h4>
      <%= event.title %>:<br/>
      <span><%= event.date %></span><br/>
      <span><%= event.time %></span>
    </h4>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <a href="/events/<%= event.id %>" class="view mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
      View
    </a>
    <div class="view mdl-layout-spacer"></div>
    <button class="accept mdl-button mdl-js-button mdl-button--fab">
      <i class="material-icons" id="accept">done</i>
    </button>
    <div class="mdl-tooltip mdl-tooltip--top" for="accept">You're going to this event</div>
    <button class="decline mdl-button mdl-js-button mdl-button--fab">
      <i class="material-icons" id="decline">delete forever</i>
    </button>
    <div class="mdl-tooltip mdl-tooltip--top" for="decline">You're not going to this event</div>
  </div>
</div>